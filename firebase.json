{
  "hosting": {
    "public": "./",
    "ignore": [
      "firebase.json",
      "babel.config.json",
      "tsconfig.json",
      "webpack.config.js",
      "LICENCE",
      "README.md",
      "package.json",
      "package-lock.json",
      "**/.*",
      "**/node_modules/**",
      "**/.*",
      "**/.git/**",
      "**/src/**",
      "**/js/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
        {
            "source":"lib/**",
            "headers":[
                {
                    "key":"cache-control",
                    "value":"public,max-age=0,must-revalidate"
                }
            ]
        },
        {
            "source":"public/**",
            "headers":[
                {
                    "key":"cache-control",
                    "value":"public,max-age=0,must-revalidate"
                }
            ]
        },
        {
            "source":"css/**",
            "headers":[
                {
                    "key":"cache-control",
                    "value":"public,max-age=0,must-revalidate"
                }
            ]
        }
    ]
  }
}
